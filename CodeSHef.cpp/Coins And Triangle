}
void solve()
{
    ll n;
    in n;
    ll k,i=1;
    k = n;
    int c=0; 
    while(k>=i){
    	k-=i;
    	c++;
    	i++;
    }
    cout<<c<<endl;
}
int main()
{
    fast();
    rf();

