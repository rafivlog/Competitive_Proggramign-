void fast()
{
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);
    cout.tie(NULL);
}
void solve()
{
    double a,b,c,m,n;
    while(1){
        cin>>a>>b;
        if(a==0 && b==0){
            break;
        }
        c = 1;
        m = a;
        n = a-b;
        while(n){
            c*=(m/n);
            m--;
            n--;
        }
        printf("%.0lf things taken %.0lf at a time is %.0lf exactly.\n",a,b,c);
    }
    
}
int main()
{
    fast();
    rf();
    solve();
    //khela_shuru
    khela_sesh
}
    
