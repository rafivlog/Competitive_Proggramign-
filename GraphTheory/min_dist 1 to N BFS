#include<bits/stdc++.h>
using namespace std;
vector<int> adj[10001];
int vis[10001];
int dist[10001];
void BFS(int src)
{
    queue<int>q;
    q.push(src);
    vis[src] = 1;
    dist[src] = 0;
    while(!q.empty())
    {
        int curr = q.front();
        q.pop();
        for(int child : adj[curr])
        {
            if(vis[child]==0)
            {
                q.push(child);
                dist[child] = dist[curr]+1;
                vis[child] = 1;
            }
        }
    }
}
int main()
{
    int t,n,m,x,y;
    cin>>t;

    while(t--)
    {
        cin>>n>>m;
        for(int i=1; i<=n; i++)
        {
            adj[i].clear();
            vis[i] = 0;
        }
        while(m--)
        {
            cin>>x>>y;
            adj[x].push_back(y);
            adj[y].push_back(x);
        }
        BFS(1);

        cout<<dist[n]<<endl;

    }
    return 0;
}

